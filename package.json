    "lint-staged": "^15.0.2",
    "postcss-html": "^1.5.0",
    "prettier": "3.0.3",
    "prettier-plugin-astro": "^0.12.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,astro}": "eslint --ext .js,.astro src",
